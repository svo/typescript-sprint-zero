{
  "name": "typescript-sprint-zero",
  "version": "1.0.0",
  "description": "Minimal, opinionated scaffolding for TypeScript backend services following hexagonal architecture and domain-driven design principles",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "test": "jest",
    "test:watch": "chokidar \"src/**/*.ts\" \"test/**/*.ts\" -c \"npx jest --findRelatedTests {path} --passWithNoTests\"",
    "test:coverage": "jest --coverage",
    "test:architecture": "jest test/architecture",
    "test:complexity": "eslint src --ext .ts,.tsx --rule 'complexity: [error, 5]' --rule 'max-depth: [error, 3]' --rule 'max-nested-callbacks: [error, 2]' --rule 'max-statements: [error, 10]' --rule 'max-params: [error, 3]' --no-eslintrc",
    "test:all": "npm run typecheck && npm run lint && npm run format:check && npm run test:coverage && npm run arch:validate",
    "ci": "npm run test:all",
    "security:audit": "npm audit --audit-level=moderate && npx audit-ci --moderate",
    "arch:validate": "depcruise --validate .dependency-cruiser.js src",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean",
    "prepare": "husky install"
  },
  "keywords": [
    "typescript",
    "hexagonal-architecture",
    "domain-driven-design",
    "clean-architecture",
    "scaffolding",
    "backend",
    "api",
    "sprint-zero"
  ],
  "author": "TypeScript Sprint Zero",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "audit-ci": "^7.1.0",
    "chokidar-cli": "^3.0.0",
    "dependency-cruiser": "^16.10.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-boundaries": "^4.2.2",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tsarch": "^5.4.1",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
